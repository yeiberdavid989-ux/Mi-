      <!-- Definición de una flor -->
      <defs>
        <g id="flor">
          <!-- Pétalos -->
          <ellipse cx="0" cy="-25" rx="15" ry="25" fill="gold"/>
          <ellipse cx="0" cy="25" rx="15" ry="25" fill="gold"/>
